{
	"name": "nest-ddd-template",
	"version": "1.0.0",
	"description": "Template NestJS con arquitectura DDD + Hexagonal, Prisma, JWT, Observabilidad y mejores pr√°cticas",
	"author": "",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"start": "node dist/main",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
		"format": "biome format . --write",
		"lint": "biome check . --write",
		"lint:check": "biome check .",
		"prepare": "husky",
		"prisma:generate": "prisma generate",
		"prisma:push": "prisma db push",
		"prisma:migrate": "prisma migrate dev",
		"prisma:migrate:deploy": "prisma migrate deploy",
		"prisma:studio": "prisma studio"
	},
	"dependencies": {
		"@nestjs/cache-manager": "^2.3.0",
		"@nestjs/common": "^11.0.14",
		"@nestjs/core": "^11.0.14",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/platform-express": "^11.0.14",
		"@nestjs/swagger": "^11.1.1",
		"@nestjs/terminus": "^11.0.0",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/auto-instrumentations-node": "^0.67.1",
		"@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
		"@opentelemetry/id-generator-aws-xray": "^2.0.3",
		"@opentelemetry/propagator-aws-xray": "^2.1.4",
		"@opentelemetry/sdk-node": "^0.208.0",
		"@prisma/client": "^5.22.0",
		"bcrypt": "^5.1.1",
		"cache-manager": "^5.2.4",
		"cache-manager-redis-yet": "^4.1.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dotenv": "^16.4.7",
		"ioredis": "^5.3.2",
		"joi": "^17.13.3",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2"
	},
	"devDependencies": {
		"@aws-sdk/client-cloudwatch": "^3.939.0",
		"@aws-sdk/client-cloudwatch-logs": "^3.939.0",
		"@biomejs/biome": "1.9.4",
		"@jest/test-sequencer": "^30.2.0",
		"@nestjs/cli": "^11.0.6",
		"@nestjs/schematics": "^11.0.4",
		"@nestjs/testing": "^11.0.14",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.19.1",
		"@types/supertest": "^6.0.3",
		"@types/uuid": "^9.0.8",
		"cross-env": "^7.0.3",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^15.3.0",
		"opossum": "^9.0.0",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2",
		"prisma": "^5.22.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.0",
		"ts-jest": "^29.3.1",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3",
		"uuid": "^13.0.0"
	},
	"jest": {
		"moduleFileExtensions": ["js", "json", "ts"],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"transformIgnorePatterns": ["node_modules/(?!uuid)"],
		"collectCoverageFrom": [
			"**/*.(t|j)s",
			"!**/*.spec.ts",
			"!**/*.e2e-spec.ts",
			"!**/node_modules/**",
			"!**/main.ts",
			"!**/tracing.ts",
			"!**/*.module.ts",
			"!**/*.dto.ts",
			"!**/infrastructure/persistence/**",
			"!**/infrastructure/logging/**",
			"!**/infrastructure/metrics/**",
			"!**/infrastructure/messaging/**",
			"!**/infrastructure/http/**",
			"!**/infrastructure/cache/**",
			"!**/infrastructure/idempotency/**",
			"!**/config/**",
			"!**/health/**",
			"!**/common/dto/**",
			"!**/shared/application/filters/**",
			"!**/api/interceptors/metrics.interceptor.ts"
		],
		"coverageDirectory": "../coverage",
		"coverageThreshold": {
			"global": {
				"branches": 80,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		},
		"coverageReporters": ["text", "lcov", "html"],
		"testEnvironment": "node"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
