# Service Name (usado en logs, métricas y tracing)
SERVICE_NAME=nest-ddd-template

# Base de Datos (PostgreSQL con Prisma)
DATABASE_URL="postgresql://postgres:password@localhost:5432/auth_db?schema=public"

# DB Individual params (para referencia)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=auth_db

# Entorno de prueba
DB_TEST_HOST=localhost
DB_TEST_PORT=5432
DB_TEST_DATABASE=auth_db_test

# JWT
JWT_SECRET=your-secret-key-change-in-production-use-strong-random-string
JWT_EXPIRES_IN=24h

# Redis (para caché e idempotencia)
REDIS_HOST=localhost
REDIS_PORT=6379

# Aplicación
PORT=3000
NODE_ENV=development

# HTTP Clients Externos (opcional)
ERP_API_URL=http://localhost:3001/api
WMS_API_URL=http://localhost:3002/api

# AWS CloudWatch (opcional - solo para producción)
AWS_REGION=us-east-1
AWS_CLOUDWATCH_LOG_GROUP=/aws/nest-ddd-template
AWS_CLOUDWATCH_LOG_STREAM=application
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# OpenTelemetry + AWS X-Ray (opcional)
# OTEL_ENABLED=true
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
